<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="4dp"
    android:elevation="4dp"
    android:padding="12dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- GAMBAR KAMERA -->
        <ImageView
            android:id="@+id/img_history_camera"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:background="@color/grey"
            android:layout_marginRight="12dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <!-- NAMA KAMERA -->
            <TextView
                android:id="@+id/txt_history_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Canon EOS M3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <!-- TANGGAL -->
            <TextView
                android:id="@+id/txt_history_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Feb 2025 - 14 Feb 2025"
                android:textSize="14sp"
                android:paddingTop="4dp" />

            <!-- STATUS -->
            <TextView
                android:id="@+id/txt_history_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Selesai"
                android:textSize="14sp"
                android:textColor="@color/secondary1"
                android:paddingTop="5dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
