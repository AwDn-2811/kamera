<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".CameraInformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- GAMBAR KAMERA -->
        <ImageView
            android:id="@+id/camera_img"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="centerCrop"
            android:contentDescription="Gambar Kamera"
            android:background="#F3F3F3" />

        <!-- KONTEN DETAIL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:orientation="vertical">

            <!-- JUDUL -->
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Canon EOS R5"
                android:layout_marginBottom="10dp"/>

            <!-- SPESIFIKASI -->
            <TextView
                android:id="@+id/txt_sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Sensor: Full Frame"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txt_resolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Resolusi: 45MP"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:drawablePadding="6dp"
                app:drawableStartCompat="@android:drawable/ic_menu_mylocation"
                android:text="Lokasi: Jakarta Selatan"
                android:layout_marginBottom="16dp"/>

            <!-- HARGA -->
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#43A047"
                android:text="Rp 250.000 / Hari"
                android:layout_marginBottom="22dp"/>

            <!-- TOMBOL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="22dp">

                <Button
                    android:id="@+id/btn_add_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tulis Ulasan"
                    android:backgroundTint="#1976D2"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btn_rent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sewa Sekarang"
                    android:backgroundTint="#FF5722"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- GARIS PEMISAH -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DADADA"
                android:layout_marginBottom="16dp"/>

            <!-- JUDUL ULASAN -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ulasan Pengguna"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <!-- LIST REVIEW -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_review_camera" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
